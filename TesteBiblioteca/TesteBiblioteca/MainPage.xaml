             x:Class="TesteBiblioteca.MainPage">

    <StackLayout>
        <Button x:Name="btnObterVersao" Text="Obter Versão" Clicked="btnObterVersao_Clicked" />
        <StackLayout Orientation="Horizontal">
            <Label Text="Versão: " FontAttributes="Bold" />
            <Label x:Name="lblVersao" />
        </StackLayout>
    </StackLayout>

</ContentPage>